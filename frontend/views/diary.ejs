<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Diary - Goshenkata</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/styles.css" rel="stylesheet">
  <style>
    .entry-card { background:#1e1e1e; border:1px solid #333; }
    .entry-card pre { white-space:pre-wrap; word-break:break-word; }
    #newEntryBtn { position:fixed; bottom:1.5rem; right:1.5rem; z-index:1030; }
  .date-header { background:#252525; border:1px solid #333; letter-spacing:0.5px; }
  .date-group { animation: fadeIn .3s ease; }
  @keyframes fadeIn { from { opacity:0; translate:0 4px;} to { opacity:1; translate:0 0;} }
  </style>
</head>
<body class="bg-dark text-light">
  <%- include('partials/navbar') %>
  <div class="container py-4" id="diary-root" data-backend-url="<%= backendApiUrl %>">
    <div class="d-flex align-items-center mb-3">
      <h1 class="me-3 mb-0">Diary</h1>
    </div>
    <div id="entries" class="row g-3"></div>
    <div id="loading" class="text-center py-4 d-none">Loading...</div>
    <div id="endOfList" class="text-center py-4 d-none text-secondary">No more entries.</div>
  </div>

  <!-- New Entry Modal -->
  <button id="newEntryBtn" class="btn btn-primary rounded-circle shadow" title="New Entry">+</button>
  <div class="modal fade" id="newEntryModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
      <div class="modal-content bg-dark text-light border-secondary">
        <div class="modal-header border-secondary">
          <h5 class="modal-title">New Diary Entry</h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form id="entryForm" class="needs-validation" novalidate>
            <div class="mb-3">
              <label for="date" class="form-label">Date</label>
              <input type="date" id="date" name="date" class="form-control bg-dark text-light border-secondary" required />
            </div>
            <div class="mb-3">
              <label for="text" class="form-label">Text</label>
              <textarea id="text" name="text" rows="6" class="form-control bg-dark text-light border-secondary" placeholder="Write your entry..." required></textarea>
            </div>
            <div class="mb-3">
              <label class="form-label">Images (not uploaded yet)</label>
              <input type="file" id="images" multiple accept="image/*" class="form-control bg-dark text-light border-secondary" />
              <small class="text-secondary">(UI only - not sent yet)</small>
            </div>
            <div class="mb-3">
              <label class="form-label">Videos (not uploaded yet)</label>
              <input type="file" id="videos" multiple accept="video/*" class="form-control bg-dark text-light border-secondary" />
              <small class="text-secondary">(UI only - not sent yet)</small>
            </div>
            <div class="text-end">
              <button type="submit" class="btn btn-primary">Save Entry</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/diary.js"></script>
</body>
</html>
