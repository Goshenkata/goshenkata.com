<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Diary - Goshenkata</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/styles.css" rel="stylesheet">
  <style>
    :root { --dk-bg:#0f0f0f; --dk-panel:#1b1b1c; --dk-panel-alt:#212123; --dk-border:#303031; --dk-accent:#5865f2; --dk-accent-faint:#2d335e; }
    body { font-family: system-ui, "Segoe UI", Roboto, Ubuntu, Cantarell, "Noto Sans", sans-serif; }
    h1, .date-label { font-family: "Segoe UI", Roboto, Ubuntu, Cantarell, "Noto Sans", sans-serif; }
    .entry-card { background:var(--dk-panel); border:1px solid var(--dk-border); border-radius:14px; padding:1.1rem 1.25rem; line-height:1.5; letter-spacing:.2px; box-shadow:0 2px 4px rgba(0,0,0,.35); transition:background .2s,border-color .2s,transform .2s; }
    .entry-card:hover { background:var(--dk-panel-alt); border-color:#444; }
    .entry-card pre { white-space:pre-wrap; word-break:break-word; font-size:.95rem; font-family: "JetBrains Mono", ui-monospace, SFMono-Regular, Menlo, monospace; line-height:1.45; background:transparent; margin:0; padding:0; }
    #newEntryBtn { position:fixed; bottom:1.5rem; right:1.5rem; z-index:1030; width:56px; height:56px; font-size:1.6rem; display:flex; align-items:center; justify-content:center; }
    /* Date grouping */
    .date-group { position:relative; margin-bottom:3rem; animation:fadeIn .35s ease; }
    .date-group:last-of-type { margin-bottom:5rem; }
    .date-label-wrap { position:sticky; top:0; z-index:10; padding:0.25rem 0; }
    .date-label { display:inline-flex; align-items:center; gap:.65rem; background:linear-gradient(140deg,#1f2333,#16181f 65%); border:1px solid #2f3546; padding:.55rem 1rem .5rem 1rem; font-size:.7rem; text-transform:uppercase; letter-spacing:1.8px; border-radius:999px; box-shadow:0 0 0 1px #0b0c10,0 4px 10px -4px rgba(0,0,0,.65); color:#e3e6f0; }
    .date-label:before { content:""; width:10px; height:10px; border-radius:50%; background:var(--dk-accent); box-shadow:0 0 0 3px #14151a,0 0 8px 2px rgba(88,101,242,.5); }
    .date-count { font-size:.55rem; padding:.2rem .55rem; background:var(--dk-accent-faint); border:1px solid #3d4374; border-radius:999px; color:#c9d1ff; letter-spacing:.5px; }
    .date-entries { margin-top:.75rem; display:grid; gap:0.9rem; }
    @media (min-width:700px){ .date-entries { grid-template-columns:repeat(auto-fill,minmax(420px,1fr)); } }
    @media (max-width:699px){ .entry-card { padding:.95rem 1rem; } }
    .divider-fade { position:absolute; left:19px; top:2.9rem; bottom:0.75rem; width:2px; background:linear-gradient(to bottom,#30374d,#20242e 35%,#1a1c20 70%,transparent); pointer-events:none; }
    @keyframes fadeIn { from { opacity:0; transform:translateY(6px);} to { opacity:1; transform:translateY(0);} }
    /* Scroll hint */
    .scroll-hint { font-size:.65rem; letter-spacing:1px; text-transform:uppercase; color:#6a7285; margin-left:.5rem; }
  /* Uploader */
  .upload-panel { background:#161619; border:1px dashed #3a3a3a; border-radius:12px; padding:0.75rem; }
  .upload-panel h6 { font-size:.9rem; color:#cfcfcf; margin-bottom:.5rem; }
  .upload-row { background:#1b1b1f; border:1px solid #2a2a2e; border-radius:8px; padding:.4rem .6rem; }
  </style>
</head>
<body class="bg-dark text-light">
  <%- include('partials/navbar') %>
  <%- include('partials/toast') %>
  <div class="container py-4" id="diary-root" data-backend-url="<%= backendApiUrl %>">
    <div class="d-flex align-items-center mb-3">
      <h1 class="me-3 mb-0">Diary</h1>
    </div>
    <div id="entries" class="row g-3"></div>
    <div id="loading" class="text-center py-4 d-none">Loading...</div>
    <div id="endOfList" class="text-center py-4 d-none text-secondary">No more entries.</div>
  </div>

  <!-- New Entry Modal -->
  <button id="newEntryBtn" class="btn btn-primary rounded-circle shadow" title="New Entry">+</button>
  <div class="modal fade" id="newEntryModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
      <div class="modal-content bg-dark text-light border-secondary">
        <div class="modal-header border-secondary">
          <h5 class="modal-title">New Diary Entry</h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form id="entryForm" class="needs-validation" novalidate>
            <div class="mb-3">
              <label for="date" class="form-label">Date</label>
              <input type="date" id="date" name="date" class="form-control bg-dark text-light border-secondary" required />
            </div>
            <div class="mb-3">
              <label for="text" class="form-label">Text</label>
              <textarea id="text" name="text" rows="6" class="form-control bg-dark text-light border-secondary" placeholder="Write your entry..." required></textarea>
            </div>
            <div class="mb-3">
              <label class="form-label">Images (not uploaded yet)</label>
              <input type="file" id="images" multiple accept="image/*" class="form-control bg-dark text-light border-secondary" />
              <div class="upload-panel mt-2">
                <h6 class="mb-2">Selected images</h6>
                <div id="imagesPreview" class="d-flex flex-column"></div>
              </div>
            </div>
            <div class="mb-3">
              <label class="form-label">Videos (not uploaded yet)</label>
              <input type="file" id="videos" multiple accept="video/*" class="form-control bg-dark text-light border-secondary" />
              <div class="upload-panel mt-2">
                <h6 class="mb-2">Selected videos</h6>
                <div id="videosPreview" class="d-flex flex-column"></div>
              </div>
            </div>
            <div class="text-end">
              <button type="submit" class="btn btn-primary">Save Entry</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script type="module">
    import { showToast } from '/js/toast.js';
    window.__toast = showToast;
  </script>
  <script type="module" src="/js/diary.js"></script>
</body>
</html>
